/** eslint-disable prettier/prettier */
/** eslint-disable prettier/prettier */
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "types": ["vite/client", "@cloudflare/workers-types", "@types/dom-speech-recognition", "electron"]
  },
  "include": [
    "app/**/*",
    "tailwind.config.ts",
    "uno.config.ts",
    "postcss.config.cjs",
    "vite.config.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
